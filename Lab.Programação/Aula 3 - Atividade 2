#include <stdio.h>
#include <locale.h>

int main(){
    
    setlocale(LC_ALL,"");
    
    int num,divi,numdi;
    
    printf("Digite seu dividendo: ");
    scanf("%i",&num);
    
    printf("Digite seu divisor: ");
    scanf("%i",&numdi);
    
    divi=num/numdi;
    
    printf("%i/%i = %i",num,numdi,divi);
    
    printf("\nSobra: %i",num%numdi);
    
}
